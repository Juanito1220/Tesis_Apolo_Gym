{
  "name": "apolo-gym",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "build": "nest build",
    "copy:prisma": "node -e \"require('fs-extra').copySync('apps/prisma/generated','dist/prisma/generated')\"",
    
    "prestart:auth": "npm run build:ms-auth && npm run copy:prisma",
    "prestart:users": "npm run build:ms-users && npm run copy:prisma",
    "prestart:memberships": "npm run build:ms-memberships && npm run copy:prisma",

    "start:dev:api": "nest start api-gateway --watch",
    "start:dev:auth": "nest start ms-auth --watch",
    "start:dev:users": "nest start ms-users --watch",
    "start:dev:memberships": "nest start ms-memberships --watch",
    
    "start:api": "nest start api-gateway",
    "start:auth": "nest start ms-auth",
    "start:users": "nest start ms-users",
    "start:memberships": "nest start ms-memberships",
    
    "start:prod:api": "node dist/apps/api-gateway/main.js",
    "start:prod:auth": "node dist/apps/ms-auth/main.js",
    "start:prod:users": "node dist/apps/ms-users/main.js",
    "start:prod:memberships": "node dist/apps/ms-memberships/main.js",
    
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/apolo-gym/test/jest-e2e.json",
    "prisma:gen:auth": "prisma generate --schema apps/ms-auth/prisma/schema.prisma",
    "prisma:gen:users": "prisma generate --schema apps/ms-users/prisma/schema.prisma",
    
    "build:ms-auth": "tsc -p apps/ms-auth/tsconfig.app.json && tsc-alias -p apps/ms-auth/tsconfig.app.json",
    "build:ms-users": "tsc -p apps/ms-users/tsconfig.app.json && tsc-alias -p apps/ms-users/tsconfig.app.json",
    "build:ms-memberships": "tsc -p apps/ms-memberships/tsconfig.app.json && tsc-alias -p apps/ms-memberships/tsconfig.app.json"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@prisma/client": "^6.16.2",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cookie-parse": "^0.4.0",
    "cookie-parser": "^1.4.7",
    "helmet": "^8.1.0",
    "http-proxy-middleware": "^3.0.5",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.0",
    "@types/http-proxy-middleware": "^0.19.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "fs-extra": "^11.3.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "prisma": "^6.16.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/"
    ]
  }
}
