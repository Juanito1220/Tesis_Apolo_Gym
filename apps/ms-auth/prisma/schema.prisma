datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../../prisma/generated/ms-auth"
}

enum Role {
  ADMIN
  TRAINER
  CLIENT
}

model User {
  id               String   @id @default(uuid())
  email            String   @unique
  passwordHash     String
  role             Role     @default(CLIENT)
  refreshTokenHash String?  // para rotar/invalidar refresh tokens
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
